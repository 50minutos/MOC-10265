<Window x:Class="_007_CRUD.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="MainWindow" Loaded="Window_Loaded">
    <Viewbox>
        <Grid>
            <Grid.RowDefinitions>
                <RowDefinition Height="*"></RowDefinition>
                <RowDefinition Height="auto"></RowDefinition>
            </Grid.RowDefinitions>

            <DataGrid Name="Dados"/>

            <StackPanel Orientation="Horizontal" Grid.Row="1">
                <Button Content="Ins" Padding="30, 10" Click="Ins_Click"></Button>
                <Button Content="Upd" Padding="30, 10" Click="Upd_Click"></Button>
                <Button Content="Del" Padding="30, 10" Click="Del_Click"></Button>
            </StackPanel>
        </Grid>
    </Viewbox>
</Window>
